                <TextBox Text="{Binding ElementName=LayoutTransformMatrixM11, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" TextAlignment="Left" Margin="2" Grid.Column="2" Grid.Row="1"/>

