                <TextBox Text="{Binding ElementName=RenderTransformMatrixM22, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" TextAlignment="Left" Margin="2" Grid.Column="2" Grid.Row="4"/>

