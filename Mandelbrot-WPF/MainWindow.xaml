<Window x:Class="Mandelbrot_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mandelbrot-WPF" 
        Height="600" Width="900">
    <Grid SnapsToDevicePixels="True" UseLayoutRounding="True" TextOptions.TextFormattingMode="Display">
        <Button x:Name="CreateMandelbrot" Content="Create" Width="100" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" Click="CreateMandelbrot_Click"/>
        <Button x:Name="SaveMandelbrot" Content="Save" Width="100" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,60,10,10" Click="SaveMandelbrot_Click"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="120,10,10,10">
            <Image x:Name="MandelbrotImage" Stretch="None" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </ScrollViewer>
    </Grid>
</Window>
