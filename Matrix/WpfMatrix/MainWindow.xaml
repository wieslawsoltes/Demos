                <TextBox Text="{Binding ElementName=RenderTransformMatrixOffsetX, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" TextAlignment="Left" Margin="2" Grid.Column="2" Grid.Row="5"/>

                <!-- OffsetY -->
