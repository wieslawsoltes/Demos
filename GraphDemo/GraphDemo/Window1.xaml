<Window x:Class="GraphDemo.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GraphDemo"
        Title="GraphDemo" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <local:GraphCanvas x:Name="graph" Width="500" Height="500" Background="WhiteSmoke" Focusable="True" Grid.Column="0"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1">
            <TextBlock FontFamily="Consolas">
                <Run FontWeight="Bold">O</Run> <Run>Polymode</Run>
            </TextBlock>
            <TextBlock FontFamily="Consolas">
                <Run FontWeight="Bold">S</Run> <Run>Selection</Run>
            </TextBlock>
            <TextBlock FontFamily="Consolas">
                <Run FontWeight="Bold">L</Run> <Run>Line</Run>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
