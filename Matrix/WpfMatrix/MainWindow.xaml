                <TextBlock Text="LayoutTransform Matrix Prepend:" FontWeight="SemiBold" VerticalAlignment="Center" TextAlignment="Left" Margin="2" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="7"/>

                <!-- ScaleX -->
