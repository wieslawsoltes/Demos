<UserControl x:Class="DemoDraw.Editor.Controls.EditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:DemoDraw.Editor.Controls"
             xmlns:paz="clr-namespace:Wpf.Controls.PanAndZoom;assembly=Wpf.Controls.PanAndZoom">
    <paz:ZoomBorder x:Name="Zoom" AutoFitMode="None" ZoomSpeed="1.2" ClipToBounds="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Focusable="True">
        <Grid x:Name="Layout" Background="Transparent" Focusable="True">
            <controls:PageControl x:Name="Surface" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </paz:ZoomBorder>
</UserControl>
